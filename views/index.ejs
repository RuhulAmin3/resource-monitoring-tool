<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resource Monitoring Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }

        header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        header p {
            font-size: 1.1em;
            opacity: 0.9;
        }

        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 30px;
            margin-bottom: 30px;
        }

        .chart-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .chart-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
        }

        .chart-title {
            font-size: 1.3em;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .chart-title::before {
            content: '';
            display: inline-block;
            width: 4px;
            height: 25px;
            border-radius: 2px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .chart-wrapper {
            position: relative;
            height: 300px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .stat-label {
            color: #666;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 2em;
            font-weight: 700;
            color: #333;
        }

        .stat-value.memory {
            color: #667eea;
        }

        .stat-value.cpu {
            color: #764ba2;
        }

        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #4ade80;
            margin-right: 8px;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        .footer {
            text-align: center;
            color: white;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        @media (max-width: 768px) {
            .charts-grid {
                grid-template-columns: 1fr;
            }

            header h1 {
                font-size: 1.8em;
            }

            .chart-wrapper {
                height: 250px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>üñ•Ô∏è Resource Monitoring Dashboard</h1>
            <p><span class="status-indicator"></span>Real-time System Performance Metrics</p>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Current Memory Usage</div>
                <div class="stat-value memory" id="currentMemory">0 MB</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Current CPU User</div>
                <div class="stat-value cpu" id="currentCpuUser">0 ms</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Current CPU System</div>
                <div class="stat-value cpu" id="currentCpuSystem">0 ms</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Server Uptime</div>
                <div class="stat-value" id="currentUptime" style="color: #764ba2;">0 s</div>
            </div>
        </div>

        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-title">Memory Usage (MB)</div>
                <div class="chart-wrapper">
                    <canvas id="memoryChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-title">CPU Usage (ms)</div>
                <div class="chart-wrapper">
                    <canvas id="cpuChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-title">Server Uptime (seconds)</div>
                <div class="chart-wrapper">
                    <canvas id="uptimeChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-title">CPU Breakdown</div>
                <div class="chart-wrapper">
                    <canvas id="cpuBreakdownChart"></canvas>
                </div>
            </div>
        </div>

        <div class="footer">
            <p>Real-time via Socket.IO | Last updated: <span id="lastUpdated">--:--:--</span> | <span
                    id="connectionStatus">üî¥ Connecting...</span></p>
        </div>
    </div>

    <!-- Socket.IO Client Library -->
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>

    <script>
        // Chart instances
        let memoryChart, cpuChart, uptimeChart, cpuBreakdownChart;

        // Data storage for charts
        const chartData = {
            memoryUsage: [],
            cpuUser: [],
            cpuSystem: [],
            uptime: [],
            timestamps: []
        };

        // Chart color scheme
        const colors = {
            primary: 'rgba(102, 126, 234, 1)',
            primaryLight: 'rgba(102, 126, 234, 0.1)',
            secondary: 'rgba(118, 75, 162, 1)',
            secondaryLight: 'rgba(118, 75, 162, 0.1)',
            success: 'rgba(74, 222, 128, 1)',
            danger: 'rgba(239, 68, 68, 1)',
        };

        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            animation: {
                duration: 0
            },
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                    labels: {
                        font: { size: 12, weight: '500' },
                        padding: 15,
                        usePointStyle: true,
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        };

        // Initialize Socket.IO connection
        const socket = io();

        socket.on('connect', () => {
            console.log('‚úÖ Connected to server via Socket.IO');
            document.getElementById('connectionStatus').textContent = 'üü¢ Connected';
            document.getElementById('connectionStatus').style.color = '#4ade80';
        });

        socket.on('disconnect', () => {
            console.log('‚ùå Disconnected from server');
            document.getElementById('connectionStatus').textContent = 'üî¥ Disconnected';
            document.getElementById('connectionStatus').style.color = '#ef4444';
        });

        // Handle initial data when connecting
        socket.on('initial-data', (data) => {
            console.log('üìä Received initial data:', data);

            chartData.memoryUsage = data.memoryUsage;
            chartData.cpuUser = data.cpuUser.map(v => parseFloat(v));
            chartData.cpuSystem = data.cpuSystem.map(v => parseFloat(v));
            chartData.uptime = data.uptime;
            chartData.timestamps = data.timestamps;

            // Update charts with initial data
            updateCharts();
        });

        // Handle real-time resource updates
        socket.on('resource-update', (data) => {
            // Add new data point
            chartData.memoryUsage.push(data.memoryUsage);
            chartData.cpuUser.push(parseFloat(data.cpuUser));
            chartData.cpuSystem.push(parseFloat(data.cpuSystem));
            chartData.uptime.push(data.uptime);
            chartData.timestamps.push(data.timestamp);

            // Keep only last 60 data points
            if (chartData.memoryUsage.length > 60) {
                chartData.memoryUsage.shift();
                chartData.cpuUser.shift();
                chartData.cpuSystem.shift();
                chartData.uptime.shift();
                chartData.timestamps.shift();
            }

            // Update charts
            updateCharts();

            // Update stats
            updateStats(data);
        });

        // Initialize charts
        function initCharts() {
            // Memory Chart
            const memoryCtx = document.getElementById('memoryChart').getContext('2d');
            memoryChart = new Chart(memoryCtx, {
                type: 'line',
                data: {
                    labels: chartData.timestamps,
                    datasets: [{
                        label: 'Memory Usage (MB)',
                        data: chartData.memoryUsage,
                        borderColor: colors.primary,
                        backgroundColor: colors.primaryLight,
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 2,
                        pointHoverRadius: 5,
                        pointBackgroundColor: colors.primary,
                    }]
                },
                options: chartOptions
            });

            // CPU Chart
            const cpuCtx = document.getElementById('cpuChart').getContext('2d');
            cpuChart = new Chart(cpuCtx, {
                type: 'line',
                data: {
                    labels: chartData.timestamps,
                    datasets: [
                        {
                            label: 'CPU User (ms)',
                            data: chartData.cpuUser,
                            borderColor: colors.primary,
                            backgroundColor: colors.primaryLight,
                            borderWidth: 2,
                            tension: 0.4,
                            fill: false,
                            pointRadius: 2,
                            pointHoverRadius: 5,
                        },
                        {
                            label: 'CPU System (ms)',
                            data: chartData.cpuSystem,
                            borderColor: colors.secondary,
                            backgroundColor: colors.secondaryLight,
                            borderWidth: 2,
                            tension: 0.4,
                            fill: false,
                            pointRadius: 2,
                            pointHoverRadius: 5,
                        }
                    ]
                },
                options: chartOptions
            });

            // Uptime Chart
            const uptimeCtx = document.getElementById('uptimeChart').getContext('2d');
            uptimeChart = new Chart(uptimeCtx, {
                type: 'line',
                data: {
                    labels: chartData.timestamps,
                    datasets: [{
                        label: 'Server Uptime (s)',
                        data: chartData.uptime,
                        borderColor: colors.success,
                        backgroundColor: 'rgba(74, 222, 128, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 2,
                        pointHoverRadius: 5,
                        pointBackgroundColor: colors.success,
                    }]
                },
                options: chartOptions
            });

            // CPU Breakdown Chart
            const cpuBreakdownCtx = document.getElementById('cpuBreakdownChart').getContext('2d');
            cpuBreakdownChart = new Chart(cpuBreakdownCtx, {
                type: 'doughnut',
                data: {
                    labels: ['CPU User', 'CPU System'],
                    datasets: [{
                        data: [0, 0],
                        backgroundColor: [colors.primary, colors.secondary],
                        borderColor: ['white', 'white'],
                        borderWidth: 2,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: { size: 12, weight: '500' },
                                padding: 15,
                            }
                        }
                    }
                }
            });
        }

        // Update charts with current data
        function updateCharts() {

            if (!memoryChart) return;

            // Update memory chart
            memoryChart.data.labels = chartData.timestamps;
            memoryChart.data.datasets[0].data = chartData.memoryUsage;
            memoryChart.update('none');

            // Update CPU chart
            cpuChart.data.labels = chartData.timestamps;
            cpuChart.data.datasets[0].data = chartData.cpuUser;
            cpuChart.data.datasets[1].data = chartData.cpuSystem;
            cpuChart.update('none');

            // Update uptime chart
            uptimeChart.data.labels = chartData.timestamps;
            uptimeChart.data.datasets[0].data = chartData.uptime;
            uptimeChart.update('none');

            // Update CPU breakdown chart
            const lastCpuUser = chartData.cpuUser[chartData.cpuUser.length - 1] || 0;
            const lastCpuSystem = chartData.cpuSystem[chartData.cpuSystem.length - 1] || 0;
            cpuBreakdownChart.data.datasets[0].data = [lastCpuUser, lastCpuSystem];
            cpuBreakdownChart.update('none');
        }

        // Update statistics display
        function updateStats(data) {
            document.getElementById('currentMemory').textContent = data.memoryUsage + ' MB';
            document.getElementById('currentCpuUser').textContent = data.cpuUser + ' ms';
            document.getElementById('currentCpuSystem').textContent = data.cpuSystem + ' ms';
            document.getElementById('currentUptime').textContent = data.uptime + ' s';
            document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
        }

        // Initialize when page loads
        window.addEventListener('DOMContentLoaded', () => {
            initCharts();
        });
    </script>
</body>

</html>